@model Digital_Planner.Models.User

@{
    ViewBag.Title = "Schedule";
}

<h2>Schedule</h2>

<div id="day" class="table">
    <div id="columns"class="row">
        <span class="col col-md-2">Category</span>
        <span class="col col-md-2">Time</span>
        <span class="col col-md-2">Title</span>
        <span class="col col-md-2">Duration</span>
        <span class="col col-md-2">Due</span>
    </div>
    <section class="events">
        @{
            //Events grouped by category
            foreach (var evt in Model.Events)
            {
                <div class="row">
                    <span class="col col-md-2">@evt.Category.Description</span>
                    <span class="col col-md-2">@evt.OccursAt</span>
                    <span class="col col-md-2">@evt.Title</span>
                    <span class="col col-md-2">@evt.Duration</span>
                    <span class="col col-md-2">@evt.CompleteBy</span>
                </div>
            }
        }
    </section>
</div>

