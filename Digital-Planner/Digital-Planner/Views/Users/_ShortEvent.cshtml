
@model  Digital_Planner.Models.Event

@{
    var tile_class = "";
    var tile_title = "";
    if (!Model.IsComplete && Model.CompleteBy.Date.Equals(DateTime.Today.Date))
    {
        tile_class = "danger";
        tile_title = "This event is set to be complete today";
    }
    else if (Model.IsComplete && Model.CompleteBy.Date.Equals(DateTime.Today.Date))
    {
        tile_class = "success";
        tile_title = "This event is complete";
    }
    
}
<tr title="@tile_title" class="@tile_class">
<td class="text-center">@Model.OccursAt.ToString("h:mm tt")</td>
<td class="text-center">@Html.ActionLink(Model.Title, "Edit/" + Model.ID, "Events", new {title="Edit event" })</td>
</tr>


