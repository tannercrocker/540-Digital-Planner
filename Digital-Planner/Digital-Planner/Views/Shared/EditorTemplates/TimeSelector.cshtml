@{ 
    int index = ViewBag.picker_index;
}
<div class="TimeSelector bootstrap-datetimepicker-widget" style="overflow:hidden;">
    <div class="form-group">
        <div class="row">
            <div class="col-md-8">
                <div id="timepicker-@index" style="margin-left:1em;"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#timepicker-@index').datetimepicker({
                format: 'h:mm A',
                useCurrent: true,
                inline: true,
                sideBySide: true
            });
        });
    </script>
</div>